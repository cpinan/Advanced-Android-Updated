<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/dimen8"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/dimen8">

    <ImageView
        android:id="@+id/author_image_view"
        android:layout_width="@dimen/author_image_size"
        android:layout_height="@dimen/author_image_size"
        android:scaleType="fitCenter"
        android:src="@drawable/lyla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="@dimen/dimen8"
        android:paddingEnd="@dimen/dimen8"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textSize14"
        app:layout_constraintStart_toEndOf="@id/author_image_view"
        app:layout_constraintTop_toTopOf="@id/author_image_view"
        tools:text="Author Text View" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/author_text_view"
        app:layout_constraintTop_toTopOf="@id/author_text_view"
        tools:text="Date Text View" />

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen8"
        android:paddingEnd="@dimen/dimen8"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textSize14"
        app:layout_constraintStart_toStartOf="@id/author_text_view"
        app:layout_constraintTop_toBottomOf="@id/author_text_view"
        tools:text="Message Text View" />

</androidx.constraintlayout.widget.ConstraintLayout>